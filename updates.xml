<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title }} â€” Updates</title>
    <link href="{{ site.production_url }}"/>
    <link href="{{ site.production_url }}/feed.xml" rel="self"/>
    <updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%S%z" }}</updated>
    <id>{{ site.production_url }}/</id>
    <author>
      <name>{{ site.author.name }}</name>
      <email>{{ site.author.email }}</email>
    </author>

    {% for update in site.updates %}
    <entry>
      <title>{{ update.title }}</title>
      <link href="{{ site.production_url }}{{ update.url }}"/>
      <updated>{{ update.date | date: "%Y-%m-%dT%H:%M:%S%z" }}</updated>
      <id>{{ site.production_url }}{{ update.id }}</id>
      <author>
        <name>{{ site.author.name }}</name>
        <email>{{ site.author.email }}</email>
      </author>
      <content type="html">{{ update.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>
