<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title }} - Updates</title>
    <link href="{{ site.domain }}"/>
    <link href="{{ site.domain }}/updates.xml" rel="self"/>
    <updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%S%:z" }}</updated>
    <id>{{ site.domain }}/</id>
    <author>
      <name>{{ site.author.name }}</name>
      <email>{{ site.author.email }}</email>
    </author>
    <icon>{{ site.domain }}/favicon.png</icon>

    {% assign sorted_updates = site.updates | sort: 'date' %}
    {% for update in sorted_updates reversed %}
    <entry>
      <title>{{ update.title }}</title>
      <link href="{{ site.domain }}{{ update.url }}"/>
      <updated>{{ update.date | date: "%Y-%m-%dT%H:%M:%S%:z" }}</updated>
      <id>{{ site.domain }}{{ update.id }}</id>
      <author>
        <name>{{ site.author.name }}</name>
        <email>{{ site.author.email }}</email>
      </author>
      <content type="html">{{ update.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>
