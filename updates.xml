<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }} â€” Updates</title>
    <link>{{ site.production_url }}</link>
    <atom:link href="{{ site.production_url }}/updates.xml" rel="self" type="application/rss+xml" />
    <description>{{ site.title }}</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for update in site.updates %}
    <item>
      <title>{{ update.title }}</title>
      <link>{{ site.production_url }}{{ update.url }}</link>
      <pubDate>{{ update.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <author>{{ site.author.email }} ({{ site.author.name }})</author>
      <guid>{{ site.production_url }}{{ update.id }}</guid>
      <description>{{ update.content | xml_escape }}</description>
    </item>
    {% endfor %}

  </channel>
</rss>
